        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/backgroundColor</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
